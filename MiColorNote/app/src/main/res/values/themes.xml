<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiColorNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fondo_azulito</item>
        <item name="colorPrimaryVariant">@color/color_botones</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="misBotones" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name = "android:backgroundTint">@color/color_botones</item>
        <item name = "android:textAllCaps">true</item>
    </style>

    <style name="misRadioButton" parent="textoPequenio">
        <item name = "android:buttonTint">@color/mi_amarillo</item>
    </style>

    <style name="textoPequenio" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name = "android:textSize">14sp</item>
        <item name = "android:textStyle">italic</item>
    </style>

    <style name="textoGrande" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name = "android:textSize">20sp</item>
        <item name = "android:textColor">@color/black</item>
    </style>

    <style name="textoTitulo" parent="textoGrande">
        <item name = "android:textSize">24sp</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textAlignment">center</item>
    </style>

    <style name="cuadrantesAzules" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name = "android:background">@color/fondo_azulito</item>
        <item name = "android:textSize">18sp</item>
    </style>

    <style name="transparencia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name = "android:alpha">0.85</item>
    </style>

</resources>